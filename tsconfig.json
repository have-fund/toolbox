{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "moduleResolution": "bundler",

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.vue"]
}
